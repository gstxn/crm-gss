# Configurações do servidor
PORT=5000
NODE_ENV=development

# Configurações do banco de dados
MONGO_URI=mongodb://localhost:27017/crm

# Configurações de JWT
JWT_SECRET=seu_jwt_secret_aqui
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# URL do frontend para CORS
FRONTEND_URL=http://localhost:3000

# Feature flags
FEATURE_CLIENTES_IMPORT_SYNC=true
ADMIN_ENABLED=true
KANBAN_ENABLED=true

# Configurações do Google Sheets
GSHEETS_SPREADSHEET_ID=seu_spreadsheet_id_aqui
GSHEETS_RANGE_CLIENTES=Clientes!A2:I
GSHEETS_SERVICE_ACCOUNT_JSON=caminho/para/seu/service-account.json
# Ou diretamente o conteúdo JSON em base64
# GSHEETS_SERVICE_ACCOUNT_JSON_BASE64=seu_json_em_base64_aqui