# =============================================================================
# CONFIGURAÇÃO DO AMBIENTE - CRM MÉDICOS
# =============================================================================
# Copie este arquivo para .env e preencha com seus valores reais
# NUNCA commite o arquivo .env no repositório!

# =============================================================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# =============================================================================
MONGO_URI=mongodb://localhost:27017/crm_medicos
# Para MongoDB Atlas:
# MONGO_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/crm_medicos

# =============================================================================
# CONFIGURAÇÃO DO SERVIDOR
# =============================================================================
PORT=5000
NODE_ENV=development
# NODE_ENV=production

# =============================================================================
# CONFIGURAÇÃO DE AUTENTICAÇÃO
# =============================================================================
JWT_SECRET=seu_jwt_secret_muito_seguro_aqui
JWT_EXPIRE=7d

# =============================================================================
# CONFIGURAÇÃO DO GOOGLE SHEETS INTEGRATION
# =============================================================================

# Opção 1: Caminho para arquivo JSON do Service Account (RECOMENDADO para desenvolvimento)
GOOGLE_SERVICE_ACCOUNT_PATH=./config/service-account.json

# Opção 2: JSON completo do Service Account (RECOMENDADO para produção)
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"seu-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}'

# Opção 3: Variáveis individuais (alternativa)
# GOOGLE_PROJECT_ID=seu-project-id
# GOOGLE_CLIENT_EMAIL=crm-medicos-sheets@seu-project.iam.gserviceaccount.com
# GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# =============================================================================
# CONFIGURAÇÃO DE UPLOAD DE ARQUIVOS
# =============================================================================

# Tamanho máximo de arquivo (em bytes) - 10MB
MAX_FILE_SIZE=10485760

# Diretório para uploads temporários
UPLOAD_DIR=./uploads

# Tipos de arquivo permitidos para importação
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# =============================================================================
# CONFIGURAÇÃO DE LOGS
# =============================================================================

# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# Diretório para arquivos de log
LOG_DIR=./logs

# Rotação de logs (dias)
LOG_ROTATION_DAYS=30

# Tamanho máximo do arquivo de log (MB)
LOG_MAX_SIZE=50

# =============================================================================
# CONFIGURAÇÃO DE EMAIL (OPCIONAL)
# =============================================================================

# Para notificações de importação
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu-email@gmail.com
# EMAIL_PASS=sua-senha-de-app
# EMAIL_FROM=noreply@seudominio.com

# =============================================================================
# CONFIGURAÇÃO DE CACHE (OPCIONAL)
# =============================================================================

# Redis para cache (opcional)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# =============================================================================
# CONFIGURAÇÃO DE RATE LIMITING
# =============================================================================

# Limite de requests por minuto por IP
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Limite específico para importação (requests por hora)
IMPORT_RATE_LIMIT=10
IMPORT_RATE_WINDOW=3600000

# =============================================================================
# CONFIGURAÇÃO DE VALIDAÇÃO
# =============================================================================

# Limite máximo de registros por importação
MAX_IMPORT_RECORDS=1000

# Limite de registros por lote de processamento
BATCH_SIZE=100

# Timeout para operações de importação (ms)
IMPORT_TIMEOUT=300000

# =============================================================================
# CONFIGURAÇÃO DE MONITORAMENTO (OPCIONAL)
# =============================================================================

# Para integração com serviços de monitoramento
# SENTRY_DSN=https://sua-chave@sentry.io/projeto
# NEW_RELIC_LICENSE_KEY=sua-chave-new-relic

# =============================================================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# =============================================================================

# Habilitar logs detalhados de desenvolvimento
DEBUG_MODE=false

# Habilitar CORS para desenvolvimento
ENABLE_CORS=true

# Domínios permitidos para CORS (separados por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# CONFIGURAÇÃO DE BACKUP (OPCIONAL)
# =============================================================================

# Para backup automático de dados importados
# BACKUP_ENABLED=false
# BACKUP_DIR=./backups
# BACKUP_RETENTION_DAYS=90

# =============================================================================
# CONFIGURAÇÕES ESPECÍFICAS DO GOOGLE SHEETS
# =============================================================================

# Timeout para operações do Google Sheets (ms)
GOOGLE_SHEETS_TIMEOUT=30000

# Número máximo de tentativas em caso de erro
GOOGLE_SHEETS_MAX_RETRIES=3

# Intervalo entre tentativas (ms)
GOOGLE_SHEETS_RETRY_DELAY=1000

# Limite de registros por sincronização
GOOGLE_SHEETS_MAX_RECORDS=5000

# =============================================================================
# CONFIGURAÇÃO DE SEGURANÇA
# =============================================================================

# Chave para criptografia de dados sensíveis
ENCRYPTION_KEY=sua_chave_de_criptografia_de_32_caracteres

# Habilitar HTTPS em produção
FORCE_HTTPS=false

# Configuração de sessão
SESSION_SECRET=seu_session_secret_muito_seguro

# =============================================================================
# CONFIGURAÇÃO DE FEATURES FLAGS
# =============================================================================

# Habilitar funcionalidades específicas
FEATURE_GOOGLE_SHEETS_SYNC=true
FEATURE_BATCH_IMPORT=true
FEATURE_AUTO_VALIDATION=true
FEATURE_EXPORT_DATA=true
FEATURE_AUDIT_LOG=true

# =============================================================================
# NOTAS IMPORTANTES
# =============================================================================
# 
# 1. SEGURANÇA:
#    - Nunca commite o arquivo .env no repositório
#    - Use senhas fortes e únicas
#    - Rotacione chaves regularmente
#    - Use HTTPS em produção
# 
# 2. GOOGLE SHEETS:
#    - Prefira GOOGLE_SERVICE_ACCOUNT_PATH para desenvolvimento
#    - Use GOOGLE_SERVICE_ACCOUNT_JSON para produção (Heroku, etc.)
#    - Compartilhe planilhas com o email do Service Account
#    - Monitore quotas da API
# 
# 3. PERFORMANCE:
#    - Ajuste BATCH_SIZE conforme sua infraestrutura
#    - Configure timeouts apropriados
#    - Use cache quando possível
# 
# 4. MONITORAMENTO:
#    - Configure logs adequadamente
#    - Monitore uso de recursos
#    - Implemente alertas para falhas
# 
# =============================================================================